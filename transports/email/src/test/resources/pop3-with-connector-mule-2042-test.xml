<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:spring="http://www.springframework.org/schema/beans"
       xmlns:pop3="http://www.mulesoft.org/schema/mule/pop3"
       xmlns:vm="http://www.mulesoft.org/schema/mule/vm"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.2/mule.xsd
       http://www.mulesoft.org/schema/mule/pop3 http://www.mulesoft.org/schema/mule/pop3/3.2/mule-pop3.xsd
       http://www.mulesoft.org/schema/mule/vm http://www.mulesoft.org/schema/mule/vm/3.2/mule-vm.xsd">

    <pop3:connector name="pop3Connector"/>
    <vm:connector name="vmConnector"/>

    <model name="test">
        <service name="relay">
            <inbound>
                <!-- adding the connector-ref here was causing issues
                     this should be identical to pop3-functional-test apart from this -->
                <pop3:inbound-endpoint user="bob" password="password" host="localhost" port="${port1}" 
                    connector-ref="pop3Connector"/>
            </inbound>
            <outbound>
                <pass-through-router>
                    <vm:outbound-endpoint path="receive" exchange-pattern="one-way"/>
                </pass-through-router>
            </outbound>
        </service>
    </model>
</mule>

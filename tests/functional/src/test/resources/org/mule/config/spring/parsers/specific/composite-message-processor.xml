<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:spring="http://www.springframework.org/schema/beans"
    xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.0/mule.xsd">


    <composite-processor name="composite1">
        <append-string-transformer message="1" />
        <append-string-transformer message="2" />
        <append-string-transformer message="3" />
        <custom-interceptor class="org.mule.interceptor.LoggingInterceptor"/>
    </composite-processor>

    <composite-processor name="composite2">
        <append-string-transformer message="1" />
        <composite-processor>
            <append-string-transformer message="a" />
            <append-string-transformer message="b" />
            <append-string-transformer message="c" />
        </composite-processor>
        <append-string-transformer message="2" />
    </composite-processor>

    <endpoint name="endpoint" address="test://test">
        <composite-processor>
            <append-string-transformer message="1" />
            <append-string-transformer message="2" />
            <append-string-transformer message="3" />
        </composite-processor>
        <processor ref="composite2" />
    </endpoint>

</mule>

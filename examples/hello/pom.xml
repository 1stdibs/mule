<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mule.examples</groupId>
        <artifactId>mule-examples</artifactId>
    <version>3.0.0-RC3-SNAPSHOT</version>
    </parent>
    <artifactId>mule-example-hello</artifactId>
    <packaging>jar</packaging>
    <name>Hello Example</name>
    <description>Shows how to configure multiple components to interact on a single request and how to manage event transformations.</description>

    <dependencies>
        <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-http</artifactId>
            <version>${version}</version>
        </dependency>
        <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-vm</artifactId>
            <version>${version}</version>
        </dependency>

        <!-- test dependencies -->
        <dependency>
            <groupId>org.mule.tests</groupId>
            <artifactId>mule-tests-functional</artifactId>
            <version>${version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <!--
                Build a deployable zip file of the app. This is a task for the assembly plugin
                but the version we use in the build is too outdated to be usable for this task.    
            -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-example</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <zip destfile="${project.build.directory}/mule-example-hello-app.zip">
                                    <zipfileset file="${project.build.directory}/mule-example-hello-${version}.jar" fullpath="lib/mule-example-hello-${version}.jar"/>
                                    <zipfileset file="${basedir}/conf/hello-http-config.xml" fullpath="mule-config.xml"/>
                                </zip>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>

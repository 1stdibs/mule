<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">
<Configure id="Server" class="org.mortbay.jetty.Server">
    <Call name="addConnector">
        <Arg>
            <New class="org.mortbay.jetty.nio.SelectChannelConnector">
              <Set name="port">8083</Set>
            </New>
        </Arg>
    </Call>

    <Set name="handler">
        <New id="Contexts" class="org.mortbay.jetty.handler.ContextHandlerCollection"/>
    </Set>

    <New id="Bookstore" class="org.mortbay.jetty.webapp.WebAppContext">
        <Arg><Ref id="Contexts"/></Arg>
        <Arg><Property name="app.home"/>/bookstore</Arg>
        <Arg>/bookstore</Arg>
        <Set name="extractWAR">false</Set>
    </New>

    <New id="Admin" class="org.mortbay.jetty.webapp.WebAppContext">
        <Arg><Ref id="Contexts"/></Arg>
        <Arg><Property name="app.home"/>/bookstore-admin</Arg>
        <Arg>/bookstore-admin</Arg>
        <Set name="extractWAR">false</Set>
    </New>
</Configure>

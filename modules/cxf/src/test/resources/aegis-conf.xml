<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:spring="http://www.springframework.org/schema/beans"
    xmlns:cxf="http://www.mulesoft.org/schema/mule/cxf"
    xmlns:http="http://www.mulesoft.org/schema/mule/http"
    xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
               http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.1/mule.xsd
               http://www.mulesoft.org/schema/mule/cxf http://www.mulesoft.org/schema/mule/cxf/3.1/mule-cxf.xsd
               http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/cxf/3.1/mule-http.xsd"
               >

    <model>
        <service name="greeterService">
            <inbound>
                <inbound-endpoint address="http://localhost:${port1}/services/greeter" exchange-pattern="request-response" >
                    <cxf:simple-service/>
                </inbound-endpoint>
            </inbound>
            <component>
                <singleton-object class="org.apache.hello_world_soap_http.GreeterImpl" />
            </component>
        </service>
        
        <service name="PopulateData">
            <inbound>
                <inbound-endpoint address="vm://test"
                    exchange-pattern="request-response" />
            </inbound>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint
                        address="http://localhost:${port1}/services/greeter"
                        exchange-pattern="request-response">
                          <cxf:simple-client
                            serviceClass="org.apache.hello_world_soap_http.Greeter"
                            operation="greetMe">
                            <!--
                                Aegis will use file
                                resources/org/apache/hello_world_soap_http/Greeter.aegis.xml
                                to configure the call to the webservice.
                            -->
                            <cxf:databinding>
                                <spring:bean
                                    class="org.apache.cxf.aegis.databinding.AegisDatabinding">
                                    <spring:property name="configuration">
                                        <spring:bean
                                            class="org.apache.cxf.aegis.type.TypeCreationOptions" />
                                    </spring:property>
                                </spring:bean>
                            </cxf:databinding>
                        </cxf:simple-client>
                    </outbound-endpoint>
                </pass-through-router>
            </outbound>
        </service>
    </model>
</mule>


<mule xmlns="http://www.mulesoft.org/schema/mule/core"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:spring="http://www.springframework.org/schema/beans"
    xmlns:cxf="http://www.mulesoft.org/schema/mule/cxf"
    xmlns:quartz="http://www.mulesoft.org/schema/mule/quartz"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.2/mule.xsd
       http://www.mulesoft.org/schema/mule/quartz http://www.mulesoft.org/schema/mule/quartz/3.2/mule-quartz.xsd
       http://www.mulesoft.org/schema/mule/cxf http://www.mulesoft.org/schema/mule/cxf/3.2/mule-cxf.xsd">

    <cxf:ws-security name="outboundConfig">
        <cxf:ws-config>
            <cxf:action value="UsernameToken"/>
            <cxf:user value="joe"/>
            <cxf:password-type value="PasswordDigest"/>
            <cxf:password-callback-class value="org.mule.module.cxf.wssec.ClientPasswordCallback"/>
        </cxf:ws-config>
    </cxf:ws-security>

    <cxf:ws-security name="inboundConfig">
        <cxf:ws-config>
            <cxf:action value="UsernameToken"/>
            <cxf:password-callback-class value="org.mule.module.cxf.wssec.ServerPasswordCallback"/>
        </cxf:ws-config>
    </cxf:ws-security>

</mule>
